<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3B2B2"
    tools:context=".EditProfileFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="68dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/buttonUploadImage"
        android:layout_width="136dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="upload Image"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonImageSelect"
        android:layout_width="136dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:text="Select Image"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/buttonUploadImage"
        app:layout_constraintTop_toBottomOf="@+id/buttonUploadImage" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Edit Bio"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/editTextTextBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="update bio"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Edit Username"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextTextBio"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextBio" />

    <EditText
        android:id="@+id/editTextTextPersonUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="update username"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/imageButtonSaveBio"
        android:layout_width="50dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:src="?android:attr/textCheckMark"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTextBio"
        app:layout_constraintStart_toEndOf="@+id/editTextTextBio"
        app:layout_constraintTop_toTopOf="@+id/editTextTextBio" />

    <ImageButton
        android:id="@+id/imageButtonSaveUsername"
        android:layout_width="48dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:src="?android:attr/textCheckMark"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonUserName"
        app:layout_constraintStart_toEndOf="@+id/editTextTextPersonUserName"
        app:layout_constraintTop_toTopOf="@+id/editTextTextPersonUserName" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>